<Window x:Class="WPF_Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Application"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Moj ucet:" HorizontalAlignment="Left" Margin="591,29,0,0" VerticalAlignment="Top"/>
        <Label Name="Label_FirstName" Content="__________________________" HorizontalAlignment="Left" Margin="682,26,0,0" VerticalAlignment="Top" Foreground="Red" Width="236" FontSize="18" Background="#FFFFFCFC"/>
        <Button Name="Button" Content="Zaregistruj ma" HorizontalAlignment="Left" VerticalAlignment="Top" Height="52" Width="164" Margin="28,24,0,0" Click="Button_Click" Background="Red"/>
        <TextBox Name="TextBox" HorizontalAlignment="Left" Height="65" Margin="298,29,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="212" TextChanged="TextBox_TextChanged_1"/>
        <CheckBox  Name="CheckBox_AcceptRules" Content="Suhlasim s pravidlami aplikacie" HorizontalAlignment="Left" Margin="28,105,0,0" VerticalAlignment="Top" Height="44" Width="235" Checked="CheckBox_Checked" Unchecked="CheckBox_AcceptRules_Unchecked" Click="CheckBox_AcceptRules_Click"/>
        <ComboBox  Name="ComboBox_AccountRole" HorizontalAlignment="Left" Margin="326,149,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_AccountRole_SelectionChanged"/>
        <ListBox Name="ListBox_AllUsers" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="519,208,78,40" RenderTransformOrigin="0.5,0.5">
            <ListBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.072"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ListBox.RenderTransform>
        </ListBox>
    </Grid>
</Window>